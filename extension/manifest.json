{
    "name": "TILTension",
    "description": "A Chrome extension for tilt",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "action": {
        "default_icons": {
            "16": "",
            "24": "",
            "32": ""
        },
        "default_title": "TILTension",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "tiltdb.json"
            ],
            "matches": [
                "*://*.google.com/*"
            ],
            "extension_ids": [
                "aefaghjpnilhnhifccckcbbiohfnknbm"
            ]
        }
    ],
    "permissions": [
        "storage"
    ]
}